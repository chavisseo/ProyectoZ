<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_agregar_materia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center">

    <!-- Scroll principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAgregarMateria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:padding="20dp">

                    <!-- Título -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agregar materia"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:paddingBottom="12dp" />

                    <!-- Spinner materias -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Materias registradas:"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="start" />

                    <Spinner
                        android:id="@+id/spinnerMateriasRegistradas"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/spinner_background"
                        android:padding="8dp"
                        android:spinnerMode="dropdown" />

                    <!-- Clave -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Clave"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="start" />

                    <EditText
                        android:id="@+id/inputClave"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:padding="8dp"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_edittxt"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/black" />

                    <!-- Nombre materia -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Nombre de la materia"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="start" />

                    <EditText
                        android:id="@+id/inputNombreMateria"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:padding="8dp"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_edittxt"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/black" />

                    <!-- Descripción -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Descripción de la materia"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="start" />

                    <EditText
                        android:id="@+id/inputDescripcionMateria"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:padding="8dp"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_edittxt"
                        android:gravity="start|top"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:hint="Escribe la descripción de la materia"
                        android:textColor="@color/black" />

                    <!-- Semestre -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Semestre"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="start" />

                    <EditText
                        android:id="@+id/inputSemestre"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:inputType="number"
                        android:padding="8dp"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_edittxt"
                        android:gravity="start|center_vertical"
                        android:textColor="@color/black" />

                    <!-- Botones Temario + Borrar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="center">

                        <Button
                            android:id="@+id/btnSeleccionarTemario"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="Seleccionar archivo"
                            android:textSize="14sp"
                            android:background="@drawable/rounded_button"
                            android:textColor="@color/white" />

                        <Space
                            android:layout_width="12dp"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/btnBorrarCampos"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:text="Borrar campos"
                            android:textSize="14sp"
                            android:background="@drawable/rounded_button"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <!-- Botón Agregar materia -->
                    <Button
                        android:id="@+id/btnAgregarMateria"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:text="Agregar materia"
                        android:textSize="16sp"
                        android:background="@drawable/rounded_button"
                        android:textColor="@color/white" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="10dp"
        android:visibility="gone" />

</RelativeLayout>
