<?xml version="1.0" encoding="utf-8"?>
<!-- Utilizamos ConstraintLayout para un posicionamiento más preciso -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAzulMenu"
    tools:context=".Menu">

    <!-- 1. Encabezado Superior -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp">

        <!-- Mensajes a la izquierda -->
        <LinearLayout
            android:id="@+id/verticalLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textSuperior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hola, Usuario"
                android:textSize="20sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textInferior"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Qué actividad harás hoy?"
                android:textSize="15sp"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Ícono de configuración a la derecha -->
        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/config"
            android:background="@android:color/transparent"
            android:contentDescription="Botón de configuración" />
    </LinearLayout>

    <!-- 2. Menú Principal -->
    <!-- Se utiliza un contenedor que ocupa el espacio entre el encabezado y el menú inferior -->
    <LinearLayout
        android:id="@+id/mainMenuLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_rect"
        android:padding="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomMenuLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Menú superior horizontal -->
        <LinearLayout
            android:id="@+id/linearMenuSuperior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Menú"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvClases"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clases"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvPerfil"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Perfil"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvActividades"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Actividades"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Fila 1: Tarjetas 1 y 2 -->
        <LinearLayout
            android:id="@+id/fila1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp">

            <!-- Card 1: Clases -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardClases"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/clasesbtn"
                        android:contentDescription="@string/desc_imagenClases" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Clases"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Card 2: Perfil -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPerfil"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/perfilbtn"
                        android:contentDescription="@string/desc_imagenPerfil" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perfil"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Fila 2: Tarjetas 3 y 4 -->
        <LinearLayout
            android:id="@+id/fila2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <!-- Card 3: Actividades -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardActividades"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/actividadesbtn"
                        android:contentDescription="@string/desc_imagenActividades" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Actividades"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Card 4: Grupos -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardGrupos"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/gruposbtn"
                        android:contentDescription="@string/desc_imagenGrupos" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grupos"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

    <!-- 3. Menú Inferior -->
    <LinearLayout
        android:id="@+id/bottomMenuLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_rect_azul"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/homebar"
            android:background="@android:color/transparent"
            android:contentDescription="Inicio" />

        <ImageButton
            android:id="@+id/btnClases"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/clasesbar"
            android:background="@android:color/transparent"
            android:contentDescription="Clases" />

        <ImageButton
            android:id="@+id/btnPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/perfilbar"
            android:background="@android:color/transparent"
            android:contentDescription="Perfil" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
